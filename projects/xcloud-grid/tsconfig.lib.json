{
    "extends": "../../tsconfig.prod.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/lib",
        "target": "es2015",
        "declaration": true,
        "inlineSources": true,
        "types": [],
        "lib": [
            "dom",
            "es2018"
        ]
    },
    "angularCompilerOptions": {
        "enableIvy": false,
        "enableResourceInlining": true,
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "strictTemplates": true
    },
    "exclude": [
        "src/test.ts",
        "**/*.spec.ts"
    ]
}